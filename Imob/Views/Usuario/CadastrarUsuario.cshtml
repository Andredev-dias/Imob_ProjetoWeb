@model Imob.Models.UsuarioLogado

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Imob</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/cadastrarLocatarioStyle.css" />
    <link rel="stylesheet" href="~/css/criarUsuarioStyle.css" />
    <script src="https://kit.fontawesome.com/0aa0d458c6.js" crossorigin="anonymous"></script>
</head>
<body>

    <div id="page">
        <aside>
            <header>
                <i class="fab fa-battle-net"></i>
                <h1>Cadastre um novo Usuário</h1>
                <a asp-action="ListaUsuarios" asp-controller="Usuario"><i class="fas fa-arrow-left"></i></a>
            </header>

            <footer>
                <strong>Imob</strong>
                <span>Imóveis</span>
            </footer>
        </aside>

        <div class="form-wrapper">            
            <form asp-action="CadastrarUsuario">
                <div class="input-block">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="email" id="login-email" />
                </div>
                <div class="input-block">
                    <label asp-for="Senha">Senha</label>
                    <input asp-for="Senha" type="password" id="login-password" />
                </div>
                <div class="input-block">
                    <label asp-for="ConfirmacaoSenha">Confirme sua senha</label>
                    <input asp-for="ConfirmacaoSenha" type="password" id="login-password-confirm" />
                </div>
                <div asp-validation-summary="ModelOnly"></div>
                <input type="submit" class="botaoGlobal" value="CADASTRAR USUÁRIO" />

            </form>
        </div>

        </div>
        
</body>
</html>