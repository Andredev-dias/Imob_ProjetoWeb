@model Imob.Models.Imovel
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Imob</title>
    <link rel="stylesheet" href="~/css/cadastrarLocatarioStyle.css" />
    <link rel="stylesheet" href="~/css/contratoPageStyle.css" />
    <script src="https://kit.fontawesome.com/0aa0d458c6.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.mask.min.js"></script>
</head>
<body>
    <div id="page">
        <aside>
            <header>
                <i class="far fa-building"></i>
                <h1>Cadastre um novo Imóvel</h1>
                <a asp-action="CardsImoveis" asp-controller="Imovel"><i class="fas fa-arrow-left"></i></a>
            </header>

            <footer>
                <strong>Imob</strong>
                <span>Imóveis</span>
            </footer>
        </aside>
        <div class="form-wrapper">
            <form asp-action="CadastrarImovel" asp-controller="Imovel" method="post" enctype="multipart/form-data">
                <div class="input-block">
                    <label for="cep">CEP</label>
                    <input type="text" placeholder="Informe o CEP de sua cidade" id="cep" />
                    <button type="button" class="btn-CEP2" id="btn-CEP"><i class="far fa-arrow-alt-circle-down"></i></button>
                </div>

                <div class="input-block">
                    <label asp-for="Cidade" for="cidade">Cidade</label>
                    <input asp-for="Cidade" type="text" placeholder="Digite sua cidade" id="cidade" />
                </div>

                <div class="input-block">
                    <label asp-for="Endereco" for="rua">Rua</label>
                    <input asp-for="Endereco" type="text" placeholder="Informe a rua do imóvel" id="rua" />
                </div>

                <div class="input-block">
                    <label asp-for="UF" for="uf">UF</label>
                    <input asp-for="UF" type="text" placeholder="Digite o Estado" id="UF" />
                </div>

                <div class="input-block">
                    <label asp-for="TipoImovel">Tipo Imovel</label>
                    <select asp-items="@ViewBag.TipoImovel" class="form-control" asp-for="TipoImovelId">
                        <option> -- SELECIONE -- </option>
                    </select>
                </div>

                <div class="input-block">
                    <label asp-for="Area" for="area">Área</label>
                    <input asp-for="Area" type="text" placeholder="Informe a àrea do imóvel" />
                </div>

                <div class="input-block">
                    <label asp-for="ValorAluguel" for="valorAluguel">Valor do Aluguel</label>
                    <input asp-for="ValorAluguel" type="text" placeholder="Informe o valor do aluguel" />
                </div>

                <div class="input-block">
                    <div id="Imagem" class="form-group">
                        <label asp-for="Imagem " for="imagem">Imagem</label>
                        <input type="file" class="form-control-file" name="file" />
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="submit"  value="CADASTRAR" class="botaoGlobal"/>

            </form>
        </div>
    </div>

    <script src="~/js/buscaCep.js"></script>
    <script type="text/javascript">

        $("#cep").mask("00000-000")

    </script>
</body>
</html>