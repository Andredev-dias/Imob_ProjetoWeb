@model Imob.Models.Contrato
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Imob</title>
    <link rel="stylesheet" href="~/css/cadastrarLocatarioStyle.css" />
    <link rel="stylesheet" href="~/css/contratoPageStyle.css" />

    <script src="https://kit.fontawesome.com/0aa0d458c6.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.mask.min.js"></script>
</head>
<body>
    <div id="page">
        <aside>
            <header>
                <i class="fas fa-file-signature"></i>
                <h1>Realize um Contrato</h1>
                <a asp-action="ListaContratos" asp-controller="Contrato"><i class="fas fa-arrow-left"></i></a>
            </header>

            <footer>
                <strong>Imob</strong>
                <span>Imóveis</span>
            </footer>
        </aside>
        <div class="form-wrapper">
            <form asp-action="CadastrarContrato" asp-controller="Contrato" method="post">
                <div class="input-block">

                    <label asp-for="LocatarioId">Locatario</label>
                    <select asp-items="@ViewBag.Locatario" class="form-control" asp-for="LocatarioId">
                        <option> -- SELECIONE -- </option>
                    </select>

                </div>

                <div class="input-block">

                    <label asp-for="CorretorId">Corretor</label>
                    <select asp-items="@ViewBag.Corretores" class="form-control" asp-for="CorretorId">
                        <option> -- SELECIONE -- </option>
                    </select>

                </div>

                <div class="input-block">

                    <label asp-for="ImovelId">Tipo Imovel</label>
                    <select asp-items="@ViewBag.Imoveis" class="form-control" asp-for="ImovelId">
                        <option> -- SELECIONE -- </option>
                    </select>

                </div>

                <div class="input-block">
                    <label asp-for="DataVencimento" for="dtavenc">Data de vencimento</label>
                    <input type="date" placeholder="Informe um vencimento para o contrato." asp-for="DataVencimento"/>
                </div>

                <input type="submit" value="SALVAR" class="botaoGlobal"/>

            </form>
        </div>
    </div>
</body>
</html>