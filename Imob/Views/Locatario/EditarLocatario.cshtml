@model Imob.Models.Locatario

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Imob</title>
    <link rel="stylesheet" href="~/css/cadastrarLocatarioStyle.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.mask.min.js"></script>
    <script src="https://kit.fontawesome.com/0aa0d458c6.js" crossorigin="anonymous"></script>
</head>
<body>


    <div id="page">
        <aside>
            <header>
                <i class="far fa-address-card"></i>
                <h1>Editar informações do Locatário</h1>
                <a asp-action="ListaLocatarios" asp-controller="Locatario"><i class="fas fa-arrow-left"></i></a>
            </header>

            <footer>
                <strong>Imob</strong>
                <span>Imóveis</span>
            </footer>
        </aside>

        <div class="form-wrapper">
            <form asp-action="EditarLocatario" asp-controller="Locatario" method="post">

                <div class="input-block">
                    <label asp-for="Nome">Nome</label>
                    <input asp-for="Nome" type="text" required />
                </div>

                <div class="input-block">
                    <label asp-for="Cpf">CPF</label>
                    <input asp-for="Cpf" type="text" id="cpf" required />
                </div>

                <div class="input-block">
                    <label asp-for="Telefone">Telefone</label>
                    <input asp-for="Telefone" type="text" id="telefone" />
                </div>

                <div class="input-block">
                    <label asp-for="Email">E-mail</label>
                    <input asp-for="Email" type="text" />
                </div>

                <div class="input-block">
                    <label asp-for="RendaDisponivel">Renda Disponível</label>
                    <input asp-for="RendaDisponivel" type="text" required />
                </div>

                <div class="input-block">
                    <label for="cep">CEP</label>
                    <input type="text" class="btn-CEP"  id="btn-CEP" required />
                </div>

                <div class="input-block">
                    <label asp-for="Cidade">Cidade</label>
                    <input asp-for="Cidade" type="text" id="cidade" required />
                </div>

                <div class="input-block">
                    <label asp-for="UF">UF</label>
                    <input asp-for="UF" type="text" id="UF" required />
                </div>

                <input type="submit"  value="Salvar" />

            </form>
        </div>
    </div>
    <script>
        $("#cpf").mask("000.000.000-00")
        $("#telefone").mask("(00) 00000-0000")
        $("#cep").mask("00000-000")
    </script>
    <script src="~/js/buscaCep.js"></script>
</body>
</html>